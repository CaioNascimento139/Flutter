class User {
  String nome;
  String email;
  String turma;
  String telefone;

  User(
    this.nome,
    this.email,
    this.turma,
    this.telefone,
  );

  factory User.fromJson(dynamic json) {
    return User(json['nome'] as String, json['email'] as String,
        json['turma'] as String, json['telefone'] as String);
  }

  @override
  String toString() {
    return '{ ${this.nome}, ${this.email}, ${this.turma}, ${telefone} }';
  }
}
